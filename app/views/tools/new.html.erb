<%= form_for @tool do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, @categories, :id, :name, prompt: true %><br>

  <%= f.submit "Create Tool" %>
<% end %>
